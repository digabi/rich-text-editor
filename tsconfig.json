{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "lib": ["dom", "ES2023", "dom.iterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "target": "es2017",
    "jsx": "react-jsx",
    "outDir": "dist",
    "declaration": true,
    "isolatedModules": true
  },
  "include": ["src/**/*", "playwright/**/*", "dev-server.ts", "server", "playwright-ct.config.ts"]
}
